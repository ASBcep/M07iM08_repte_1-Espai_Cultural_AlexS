<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fons">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tvTitol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Gestionar entrades de l'esdeveniment"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/titol"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivHR"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/escut"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"/>

        </LinearLayout>
        <!--ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvTitularsEntrades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titular[s] entrades"
                    android:textAlignment="center"/>
                <!--LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTaulaEntrades"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout-->
                <!--androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTaulaEntrades"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_weight="1">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTaulaEntrades"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Canviar número d\'entrades reservades:"/>
                    <Spinner
                        android:id="@+id/spEntrades"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvEntradesAssignades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Se t\'han assignat les entrades X, Y, Z."
                    android:paddingTop="10dp"/>
                <LinearLayout
                    android:id="@+id/llTotalLocalitats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">
                    <TextView
                        android:id="@+id/tvLocalitatsTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Localitats: 100"/>
                    <TextView
                        android:id="@+id/tvLocalitatsDisponible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponibles: 50"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        <!--/ScrollView-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonsInferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="bottom|center"
        android:padding="10dp">

        <Button
            android:id="@+id/btnEnrere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Enrere"
            android:backgroundTint="@color/enrere" />
        <Button
            android:id="@+id/btnModificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Modificar reserva"
            android:backgroundTint="@color/boto" />
        <!--Button
            android:id="@+id/btnCancelarReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Cancel·lar reserva" /-->

    </LinearLayout>
</LinearLayout>