<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--ImageView
        android:id="@+id/ivListEsdeveniment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/escut"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        /-->
    <ImageView
        android:id="@+id/ivListEsdeveniment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/escut"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/NomListEsdeveniment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Títol esdeveniment"/>
        <TextView
            android:id="@+id/dataHoraEsdeveniment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dia i hora esdeveniment"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/preuEsdeveniment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preu €"/>
            <TextView
                android:id="@+id/entradesDisponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Entrades disponibles: XX"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>